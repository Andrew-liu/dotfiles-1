[user]
	name = Paul Miller
	email = paul@paulmillr.com

[github]
	user = paulmillr

[alias]
  st = status
  ci = commit

  cpush = !git commit -a -m '$1' && git push -u origin
  summary = !sh -c 'git log --pretty=format:\"%ae\" | sort | uniq -c | sort -r'

  changelog = !sh "$HOME/Development/dotfiles/git-extras/git-changelog.sh"
  release = !sh "$HOME/Development/dotfiles/git-extras/git-release.sh"
  setup = !sh "$HOME/Development/dotfiles/git-extras/git-setup.sh"

[color]
  ui = true

[core]
  editor = mate -w

[format]
  pretty = oneline

[mergetool]
	keepBackup = true
