[user]
	name = Paul Miller
	email = paul@paulmillr.com

[alias]
  st = status
  ci = commit
  ls = ls-files

  unstage = reset HEAD
  last = cat-file commit HEAD
  log = log --graph --decorate --pretty=oneline --abbrev-commit
  lg = log -n 15 --graph --decorate --pretty=oneline --abbrev-commit
  commiters = !git log --pretty=format:\"%ae\" | sort | uniq -c | sort -r

[color]
  ui = true

[core]
  editor = mate -w

[format]
  pretty = oneline

[mergetool]
	keepBackup = true
